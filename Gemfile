source 'https://rubygems.org'

gem 'rails', '3.2.0'

# Bundle edge Rails instead:
# gem 'rails', :git => 'git://github.com/rails/rails.git'

# sqlserver adapter requires tiny_tds
gem 'tiny_tds'

# Use sqlserver as the database for Active Record
gem 'activerecord-sqlserver-adapter', '~> 3.2.0'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'

  # See https://github.com/sstephenson/execjs#readme for more supported runtimes
  # gem 'therubyracer'

  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

# To use Jbuilder templates for JSON
# gem 'jbuilder'

# To use ActiveModel has_secure_password
# gem 'bcrypt-ruby', '~> 3.0.0'

# Use unicorn as the web server
# gem 'unicorn'

# Use Capistrano for deployment
# gem 'capistrano', group: :development

# Use Capistrano from RVM for deployment
gem 'rvm-capistrano'

# Use colored for capistrano progress display
gem 'colored'

# pagination library
gem 'will_paginate', '~> 3.0'

# To use debugger
# gem 'ruby-debug19', :require => 'ruby-debug'
